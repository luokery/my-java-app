<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ProductMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (name, price, stock, create_time)
        VALUES (#{name}, #{price}, #{stock}, #{createTime})
    </insert>

    <select id="findById" resultType="com.example.demo.model.Product">
        SELECT *
        FROM product
        WHERE id = #{id}
    </select>

    <select id="findAll" resultType="com.example.demo.model.Product">
        SELECT *
        FROM product
    </select>

    <delete id="deleteById">
        DELETE
        FROM product
        WHERE id = #{id}
    </delete>

</mapper>